{
  "name": "chat-now-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "prebuild": "rimraf build",
    "build": "craco build",
    "test": "craco test",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "codegen:endpoint": "npx apollo client:codegen --target typescript --endpoint http://localhost:4000/graphql --outputFlat --includes \"src/**\" --excludes \"src/generated\" src/generated"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn eslint --fix",
      "yarn prettier --write",
      "yarn jest --bail --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "prettier",
      "simple-import-sort"
    ],
    "rules": {
      "prettier/prettier": "error",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "bracketSpacing": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "@craco/craco": "^6.1.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "graphql": "^15.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "apollo": "^2.33.2",
    "autoprefixer": "^9",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "postcss": "^7",
    "prettier": "^2.3.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  }
}
